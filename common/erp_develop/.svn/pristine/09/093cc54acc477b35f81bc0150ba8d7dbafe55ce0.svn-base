<!DOCTYPE html>
<html>
<head>
	{include file='public/head' /}
  	<title>country-manage-add</title>

</head>
<body class="layui-layout-body">
<div class="layui-layout layui-layout-admin">

	<div class="layui-header">
	{include file='public/header' /}
	</div>

	 <div class="layui-side layui-bg-black">
	   <div class="layui-side-scroll">
	     <!-- 左侧导航区域（可配合layui已有的垂直导航） -->
		{include file='public/left_menu' /}
	   </div>
	 </div>

	<div class="layui-body">

		<!-- 内容主体区域 -->
		<div style="padding: 15px;">
			<div class='layui-form-item'>
		   		<span class="layui-breadcrumb" lay-separator="-">
					<a>{$language_tag.index_public_homepage}</a>
					<a>{$language_tag.index_public_system}</a>
					<a>{$language_tag.index_system_showCountryManage_country_manage}</a>
					<a><cite>{$language_tag.index_system_showCountryManage_add_city}</cite></a>
				</span>
			</div>
			<br/><br>
			<div class="layui-field-box layui-row">
				<form class="layui-form layui-col-md4" onSubmit="return countryCityAdd()">
					<label class="layui-form-label input-required">{$language_tag.index_system_showCountryManage_country}：</label>
					<div class="layui-input-block layui-form " >
						<select id="country_name_d2" name="country_name_d2" lay-verify="required"
								lay-filter="country_name_d2" lay-search>
							<option value="">--{$language_tag.index_system_showCountryManage_choose_country}--</option>
							{foreach name="country_data_result" item='vo'}
							<option value="{$vo.country_id}">{$vo.country_name}</option>
							{/foreach}
						</select>
					</div>
					<br/>
					<div class="layui-form-item">
						<label class="layui-form-label input-required">{$language_tag.index_system_showCountryManage_city}：</label>
						<div class="layui-input-block">
							<input id="country_city_name" name="country_name" lay-verify="required" placeholder="{$language_tag.index_system_showCountryManage_input_city}" autocomplete="off" class="layui-input" type="text">
						</div>
					</div>
					<br>
					<div class="layui-form-item">
						<div class="layui-input-block">
							<button class="layui-btn nav-submit" lay-submit="" lay-filter="formDemo" id="currency_add_sp1_button">{$language_tag.index_public_submit}</button>
							<a href="javascript:history.back(-1)"><button type="button" class="layui-btn layui-btn-primary">{$language_tag.index_public_back}</button></a>
						</div>
					</div>
				</form>
			</div>
		</div>
	</div>

  <div class="layui-footer">
    <!-- 底部固定区域 -->
    © layui.com - 底部固定区域
  </div>
</div>
{include file='public/foot_js' /}
<script src='__STATIC__/javascript/system/system.js'></script>
</body>
</html>