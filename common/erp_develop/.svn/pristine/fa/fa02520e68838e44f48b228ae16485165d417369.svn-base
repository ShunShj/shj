<!doctype html>

<head>
	<meta charset="UTF-8">
	<meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">
	<meta name="viewport" content="width=device-width, initial-scale=1.0">
	<title>{$language_tag.index_login_show_login}</title>
	<link rel="stylesheet" type="text/css" href="__STATIC__/login/css/styles.css">
	<link rel="stylesheet" href="__STATIC__/layui/css/layui.css">
</head>
<body>
<div class="htmleaf-container">
	<div class="login-title"><img src="__STATIC__/image/login/login-logo.png" width="150px" height="auto" /></div>
	<div class="wrapper">
		<div class="login-box">
			<div class="login-bg layui-anim layui-anim-up"></div>
			<div class="container">
				<h3>{$language_tag.index_login_show_user_login}</h3>
				<form class="form" onsubmit="return false;">
					<div class="login-pos">
						<input type="text" required="required" placeholder="{$language_tag.index_system_showUserManage_user_name}" id='username' />
						<i class="layui-icon layui-icon-username"></i>
					</div>
					<div class="login-pos">
						<input type="password" required="required" placeholder="{$language_tag.index_public_password}" id='password' />
						<i class="layui-icon layui-icon-password"></i>
					</div>
					<div class="login-button">
						<!-- <span class="login-forget">忘记密码</span>  -->
						<input type='submit' value='{$language_tag.index_login_show_login}' id='login_check'>
					</div>
				</form>
			</div>
		</div>
	</div>
	<div class="login-footer">Copyright © 2018 联谊假期版权所有</div>
</div>

<script src="__STATIC__/layui/layui.all.js"></script>
<script src="__STATIC__/login/js/jquery-2.1.1.min.js" type="text/javascript"></script>
<script src="__STATIC__/login/js/login.js"></script>
</body>
</html>