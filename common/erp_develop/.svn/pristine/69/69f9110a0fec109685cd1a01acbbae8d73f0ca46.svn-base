<!DOCTYPE html>
<html>
<head>
    {include file='public/head' /}
    <title> 修改用户</title>
</head>
<body class="layui-layout-body">
<div class="layui-layout layui-layout-admin">

    <div class="layui-header">
        {include file='public/header' /}
    </div>

    <div class="layui-side layui-bg-black">
        <div class="layui-side-scroll">
            <!-- 左侧导航区域（可配合layui已有的垂直导航） -->
            {include file='public/left_menu_web' /}
        </div>
    </div>

    <div class="layui-body">

        <!-- 内容主体区域 -->
        <div style="padding: 15px;">
            <div class='layui-form-item'>
		   		<span class="layui-breadcrumb" lay-separator="-">
                    <a>首页</a>
                    <a>用户列表</a>
                    <a>用户列表</a>
                    <a><cite>修改用户</cite></a>
				</span>
            </div>

            <br/>
            <br/>
            <br/>
            <form class="layui-form" id="form1" onSubmit="return edit()">
                <input type="hidden" value="{$member_info.uuid}" name="uuid">
                <a>注册信息</a>
                <br>

                <div class="layui-row layui-col-space10">
                    <div class="layui-row">
                        <div class="layui-col-md4">
                            <div class="layui-form-item">
                                <label class="layui-form-label">注册时间：</label>
                                <div class="layui-input-block">
                                    <label class="layui-form-label">{$member_info.create_time|date="Y-m-d H:i:s",###}</label>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="layui-row">
                        <div class="layui-col-md4">
                            <div class="layui-form-item">
                                <label class="layui-form-label input-required">{$language_tag.index_system_showUserManage_user_name}:</label>
                                <div class="layui-input-block">
                                    <input type="text"  name="username" disabled autoComplete="off"  placeholder="{$language_tag.index_system_showUserManage_user_name}" class="layui-input" value="{$member_info.username}" >
                                </div>
                            </div>
                        </div>
                        <div class="layui-col-md4">
                            <div class="layui-form-item">
                                <label class="layui-form-label input-required">{$language_tag.index_public_password}:</label>
                                <div class="layui-input-block">
                                    <input type="password" name="password" autoComplete="new-password"  placeholder="{$language_tag.index_public_password}" class="layui-input" value="" >
                                </div>
                            </div>
                        </div>
                    </div>



                    <div class="layui-row layui-col-space10">
                        <a>游客信息</a>
                        <br>
                        <div class="layui-row">
                            <div class="layui-col-md4">
                                <div class="layui-form-item">
                                    <label class="layui-form-label">昵称:</label>
                                    <div class="layui-input-block">
                                        <input type="text" id="" name="nickname" autocomplete="off"  placeholder="昵称" class="layui-input" value="{$member_info.nickname}" >
                                    </div>
                                </div>
                            </div>
                            <div class="layui-col-md4">
                                <div class="layui-form-item">
                                    <label class="layui-form-label">{$language_tag.index_branchcompany_showBranchProductManage_sex}:</label>
                                    <div class="layui-input-block">
                                        <select name="gender" class="layui-select" >
                                            <option value="1" {if condition="$member_info.gender eq 1"}selected='selected' {/if}>{$language_tag.index_branchcompany_showBranchProductManage_boy}</option>
                                            <option value="2" {if condition="$member_info.gender eq 2"}selected='selected' {/if}>{$language_tag.index_branchcompany_showBranchProductManage_girl}</option>
                                        </select>
                                    </div>
                                </div>
                            </div>
                            <div class="layui-col-md4">
                                <div class="layui-form-item">
                                    <label class="layui-form-label input-required">{$language_tag.index_system_showUserManage_email}:</label>
                                    <div class="layui-input-block">
                                        <input type="text" name="email" autocomplete="off"  placeholder="{$language_tag.index_system_showUserManage_email}" class="layui-input" value="{$member_info.email}" >
                                    </div>
                                </div>
                            </div>

                        </div>

                   <!-- <a>订购信息</a>
                    <hr>


                    <div class="layui-col-md10">
                        <div class="layui-form-item">
                            <label class="layui-form-label">所属上级:</label>
                            <div class="layui-input-block layui-form">
                                <select name="pid" class="layui-select" >
                                    <option value="0">请选择</option>

                                    {foreach $type_list as $v}
                                    <option value={$v.id}{if condition="$type_info.pid eq $v.id"} selected='selected' {/if}>{$v.type_name}</option>
                                    {/foreach}

                                </select>
                            </div>
                        </div>
                    </div>

                    <div class="layui-col-md10">
                        <div class="layui-form-item">
                            <label class="layui-form-label">状态:</label>
                            <div class="layui-input-block layui-form">
                                <select name="status" class="layui-select" >
                                    <option value="1" {if condition="$type_info.status eq 1"}selected='selected' {/if}>开启</option>
                                    <option value="2" {if condition="$type_info.status eq 0"}selected='selected' {/if}>关闭</option>
                                </select>
                            </div>
                        </div>
                    </div>
-->

                <div class="layui-form-item">
                    <div class="layui-input-block all-button-center">
                        <button class="layui-btn nav-submit" lay-submit="" lay-filter="formDemo" id="addBut">提交</button>
                        <a href="/ota_member/lst?status=1"><button type="button" class="layui-btn layui-btn-primary">取消</button></a>
                    </div>
                </div>

            </form>
        </div>
    </div>


    <div class="layui-footer">
        <!-- 底部固定区域 -->
        © layui.com - 底部固定区域
    </div>
</div>
{include file='public/foot_js' /}


<script>

    !function() {
        var layer = layui.layer;
        var form = layui.form;
        var laydate = layui.laydate;



    }();


    function edit() {
        layer.load(2);
        $.ajax({
            type: "POST",
            url: '/ota_member/editAjax',
            data: $('#form1').serializeArray(),
            success: function (data) {
                layer.closeAll();
                if(data.code!=200){
                    layer.msg(data.msg)
                    return false;
                }else if(data.code==200){
                    layer.msg('{$language_tag.index_public_success}',{time:1,end : function(layero, index){
                        history.back(-1);
                    }
                    });
                }
            },
            error:function(XMLHttpRequest, textStatus, errorThrown){
                layer.closeAll();
                //console.log(errorThrown)
                layer.msg('{$language_tag.index_public_verificationFailure}')

            }
        });
        return false;
    }
</script>


