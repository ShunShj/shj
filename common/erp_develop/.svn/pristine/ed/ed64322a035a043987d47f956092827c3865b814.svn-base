<!DOCTYPE html>
<head>
	{include file='public/head' /}
  	<title>layout 后台大布局 - Layui</title>
 
</head>
<body class="layui-layout-body">
<div class="layui-layout layui-layout-admin">
  <div class="layui-header">
	{include file='public/header' /}
  </div>
  
  <div class="layui-side layui-bg-black">
    <div class="layui-side-scroll">
      <!-- 左侧导航区域（可配合layui已有的垂直导航） -->
		{include file='public/left_menu_web' /}
    </div>
  </div>
  
  <div class="layui-body">
  
		<!-- 内容主体区域 -->
		<div style="padding: 15px 15px 0px;">
		<div class="body-top">
			<div class='layui-form-item'>
			<span class="layui-breadcrumb" lay-separator="-">
				<a>{$Think.lang.index_public_homepage}</a>
				<a>管网管理</a>
			  	<a><cite>菜单管理</cite></a>
			</span>
			</div>
			<br/>
			<div class='layui-block input-inline' >
				<div class='layui-button-inline'>
					<span><a href='/ota_system/showOtaMenuAdd?ota_menu_list_uuid={$Think.get.ota_menu_list_uuid}&&ota_menu_id={$Think.get.ota_menu_id}'><button class="layui-btn nav-add">添加菜单</button></a></span>
				</div>
			</div>
			<hr><br>
		</div>
		<div class="table-nont user-manage pageHeight">
			<table class="layui-table" >
				<thead>
				<tr>
					<th>ID</th>
					<th>按钮名称</th>
					<th>所属菜单</th>
					<th>按钮链接类型</th>
					<th>排序</th>
					<th>状态</th>
					<th>创建时间</th>
					<th>创建人</th>
					<th class="layui-table-width">{$Think.lang.index_source_operation}</th>
				</tr>

				</thead>
				<tbody>
				{foreach name="data" item="vo" }
				<tr>
					<th>{$vo.ota_menu_id}</th>
					<th>{$vo.menu_name}</th>
					<th>{$vo.pid_name}</th>
					<th>{if condition="$vo.href_type eq 1"}内部链接{elseif condition="$vo.href_type eq 2"/}外部链接{else/}无链接{/if}</th>
					<th>{$vo.sorting}</th>
					<th>{if condition="$vo.status eq 1"}{$Think.lang.index_public_show}{else/}{$Think.lang.index_public_disabled}{/if}</th>
					<th>{$vo.create_time|date="y-m-d",###}</th>
					<th>{$vo.nickname}</th>
					<th><span><a href='/ota_system/showOtaMenuEdit/ota_menu_id/{$vo.ota_menu_id}'><button class="layui-btn layui-btn-sm hover-edit layui-btn-primary">{$Think.lang.index_public_update}</button></a></span>
						<span><a href='/ota_system/showOtaMenuManage?ota_menu_list_uuid={$Think.get.ota_menu_list_uuid}&&pid={$vo.ota_menu_id}&&status=1&&ota_menu_id={$vo.ota_menu_id}'><button class="layui-btn layui-btn-sm hover-details layui-btn-primary">编辑更多</button></a></span></th>
				</tr>
				{/foreach}
				</tbody>
			</table>
		</div>

		<div class="listButtom">
			<!--加载分页-->
			{include file='public/page' /}
		</div>
    </div>
  </div>
  
  <div class="layui-footer">
    <!-- 底部固定区域 -->
    © layui.com - 底部固定区域
  </div>
</div>
{include file='public/foot_js' /}
<script>
  //JavaScript代码区域
  var layer = layui.layer
</script>
</body>
</html>