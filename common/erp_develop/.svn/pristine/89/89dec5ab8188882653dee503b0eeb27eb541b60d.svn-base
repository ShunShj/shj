                            </th>
                            <th>
                                <select disabled class="room_type"  >
                                    <option></option>
                                    {foreach $room_type as $ky=>$vy}
                                    <option value="{$ky}" {$ky==$session_hotelV.room_type?'selected':''}>{$vy}</option>
