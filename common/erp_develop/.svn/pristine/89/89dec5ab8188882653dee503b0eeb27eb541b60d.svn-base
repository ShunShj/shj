            <input class="layui-input unit_price"  name="unit_price[ii]" type="hidden">
            <th>
                <select name="currency[ii]" class="currency">
                    <option value="0"></option>
                    {foreach $CurrencyList as $v }
                    <option value="{$v.currency_id}">{$v.currency_name}</option>
