                            <input  class="room_type" name="room_type[{$k}]" value="{$session_hotelV.room_type}" type="hidden" />
                            <th>
                                <input class="layui-input the_day" name="the_day[{$k}]" value="{$session_hotelV.the_day}" type="number" required />
                            </th>
                            <th>
                                <input class="layui-input quantity"  name="quantity[{$k}]" required lay-verify="required|number" value="{$session_hotelV.quantity}" type="number" >
                            </th>
                            <th class="th_cost_price">{$session_hotelV.symbol}{$session_hotelV.quantity*$session_hotelV.cost_price}</th>
                            <input class="cost_price" name="cost_price[{$k}]" value="{$session_hotelV.cost_price}" type="hidden" />
                            <th class="th_unit_price">{$session_hotelV.symbol}{$session_hotelV.quantity*$session_hotelV.unit_price}</th>
                            <input class="layui-input unit_price"  name="unit_price[{$k}]" value="{$session_hotelV.unit_price}" type="hidden">
                            <th>
                                <select name="currency[{$k}]" class="currency">
                                    <option value="0"></option>
                                    {foreach $CurrencyList as $v }
                                    <option value="{$v.currency_id}" {$session_hotelV.currency==$v.currency_id?'selected':''}>{$v.currency_name}</option>
                                    {/foreach}
                                </select>
                            </th>
                            <input class="symbol" name="symbol[{$k}]"  value="{$session_hotelV.symbol}" type="hidden" />
                            <th><input class="layui-input total"  name="total[{$k}]" required lay-verify="required|number" value="{$session_hotelV.total}"></th>
                            <th>
                                <input type="hidden" name="team_product_allocation_id[{$k}]" value="{$session_hotelV.team_product_allocation_id}" />
