    <script>
        //JavaScript代码区域
        var layer = layui.layer;
        var form = layui.form;
        var laydate = layui.laydate;

        $('.select2').select2({width:'400px'});



        function add(){
            layer.load();
            $.ajax({
                type: "POST",
                url: '/booknexus_tour/addBooknexusTourAjax',
                data:  $('#form1').serializeArray(),
                success: function(data){ layer.closeAll('loading'); //关闭loading
                    //console.log(data);
                    if(data.code!=200){
                        layer.msg(data.msg);
                        return false;
                    }else if(data.code==200) {
                        layer.msg('操作成功',{time:2000,end : function(layero, index){
                            location.href="/booknexus_tour/index";
                        }
                        });
                    }
                },
                error:function(XMLHttpRequest, textStatus, errorThrown){ layer.closeAll('loading'); //关闭loading
                    layer.msg('验证失败')
                }
            });
            return false;
        }


    </script>

