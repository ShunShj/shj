<!DOCTYPE html>
<html>
<head>
	{include file='public/head' /}
  	<title>tag-manage</title>
</head>
<body class="layui-layout-body">
<div class="layui-layout layui-layout-admin">
  <div class="layui-header">
	{include file='public/header' /}
  </div>
  
  <div class="layui-side layui-bg-black">
    <div class="layui-side-scroll">
      <!-- 左侧导航区域（可配合layui已有的垂直导航） -->
		{include file='public/left_menu' /}
    </div>
  </div>
  
  <div class="layui-body">
  
    <!-- 内容主体区域 -->
    <div style="padding: 15px 15px 0px;">
		<div class="body-top">
			<div class='layui-form-item'>
			<span class="layui-breadcrumb" lay-separator="-">

				<a>{$language_tag.index_public_homepage}</a>
				<a>{$language_tag.index_public_system}</a>
				<a><cite>{$language_tag.index_nav_labelManagement}</cite></a>

			</span>
			</div>
			<br/>
			<div class='layui-block input-inline' >
				<form method='get' action='/system/showTagManage'>
					<div class='layui-input-inline'>
						<input type="text" name="tag_name"  value="{$Think.get.tag_name}" placeholder="{$language_tag.index_system_showTagManage_tag_name}" class="layui-input">
					</div>
					<div class='layui-input-inline'>
						<div class="layui-form">
							<select name="type_name">
								<option value="0">-{$language_tag.index_system_showTagManage_please_select_module}-</option>
								{foreach name='type_data' item='vo'}
								<option value="{$vo}">{$vo}</option>
								{/foreach}
							</select>
						</div>
					</div>
					<div class='layui-button-inline layui-search-inline'>
						<button class="layui-btn nav-search">{$language_tag.index_public_search}</button>
					</div>
				</form>
				<span>
					<a href='/system/showTagAdd'>
						<button class="layui-btn nav-add">{$language_tag.index_public_add}</button>
					</a>
				</span>
			</div>
			<hr>
		</div>
		<div class="table-nont user-manage pageHeight">
			<table class="layui-table" id="language-table">
				<thead>
				<tr>
					<th>{$language_tag.index_system_showCurrencyManage_id}</th>
					<th>{$language_tag.index_system_showTagManage_module_name}</th>
					<th>{$language_tag.index_system_showTagManage_tag_name}</th>
					<th>{$language_tag.index_system_showTagManage_tag_code}</th>
					<th>{$language_tag.index_source_showHotelManage_FinalOperationTime}</th>
					<th>{$language_tag.index_branchcompany_showDistributorManage_operationUser}</th>
					<th class="layui-table-width">{$language_tag.index_source_operation}</th>
				</tr>
				</thead>

				<tbody>
				{foreach $data as $k=>$v}
				<tr>
					<th>{$v.tag_id}</th>
					<th>{$v.type_name}</th>
					<th>{$v.tag_name}</th>
					<th>{$v.code_name}</th>
					<th>{$v.update_time|date='Y-m-d H:i:s',###}</th>
					<th>{$v.nickname}</th>
					<th><span><a href='/system/showTagEdit?code_name={$v.code_name}&type_name={$v.type_name}'><button class="layui-btn layui-btn-sm hover-edit layui-btn-primary">{$language_tag.index_public_update}</button></a></span>
				</tr>
				{/foreach}
				</tbody>
			</table>
		</div>
		<div class="listButtom">
			{include file='public/page' /}
		</div>
    </div>

  </div>
  
  <div class="layui-footer">
    <!-- 底部固定区域 -->
    © layui.com - 底部固定区域
  </div>
</div>
{include file='public/foot_js' /}

</body>
</html>
