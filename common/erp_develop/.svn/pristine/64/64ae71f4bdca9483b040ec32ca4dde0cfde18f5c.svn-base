<!DOCTYPE html>
<head>
    {include file='public/head' /}
    <title>language-manage-add</title>

</head>
<body class="layui-layout-body">
<div class="layui-layout layui-layout-admin">

    <div class="layui-header">
        {include file='public/header' /}
    </div>

    <div class="layui-side layui-bg-black">
        <div class="layui-side-scroll">
            <!-- 左侧导航区域（可配合layui已有的垂直导航） -->
            {include file='public/left_menu_web' /}
        </div>
    </div>

    <div class="layui-body">

        <!-- 内容主体区域 -->
        <div style="padding: 15px;">
            <div class='layui-form-item'>
		   		<span class="layui-breadcrumb" lay-separator="-">
					<a>{$language_tag.index_public_homepage}</a>
                    <a>管网管理</a>
                    <a>菜单管理</a>
                    <a><cite>修改菜单</cite></a>
				</span>
            </div>
            <br/>
            <br/>
            <div class="layui-row">
                <form class="layui-form layui-col-md4" onSubmit="return menu_list_edit()">
                    <div class="layui-form-item">
                        <label class="layui-form-label input-required">菜单名称：</label>
                        <div class="layui-input-block">
                            <input id="title" name="title" required="" lay-verify="required" placeholder="" autocomplete="off" class="layui-input" type="text" value="{$result.title}">
                        </div>
                    </div>
                    <br/>
                    <div class="layui-form-item">
                        <label class="layui-form-label">位置：</label>
                        <div class="layui-input-block">
                            <select name="type" id='type' lay-verify="required">
                                <option value="1" {if condition="1 eq $result['type']"}selected="seleted"{/if}>头部</option>
                                <option value="2" {if condition="2 eq $result['type']"}selected="seleted"{/if}>尾部</option>
                                <option value="3" {if condition="3 eq $result['type']"}selected="seleted"{/if}>其他</option>
                            </select>
                        </div>
                    </div>
                    <br/>
                    <div class="layui-form-item">
                        <label class="layui-form-label">样式：</label>
                        <div class="layui-input-block">
                            <select name="style" id='style' lay-verify="required">
                                <option value="1" selected>样式1</option>
                            </select>
                        </div>
                    </div>
                    <br/>
                    <div class="layui-form-item">
                        <label class="layui-form-label">title：</label>
                        <div class="layui-input-block">
                            <input id="author" name="author" placeholder="" autocomplete="off" class="layui-input"
                                   type="text" value="{$result.author}">
                        </div>
                    </div>
                    <br/>
                    <div class="layui-form-item">
                        <label class="layui-form-label">keywords：</label>
                        <div class="layui-input-block">
                            <input id="keywords" name="keywords" placeholder="" autocomplete="off"
                                   class="layui-input" type="text" value="{$result.keywords}">
                        </div>
                    </div>
                    <br/>
                    <div class="layui-form-item">
                        <label class="layui-form-label">description：</label>
                        <div class="layui-input-block">
                            <input id="description" name="description" placeholder="" autocomplete="off"
                                   class="layui-input" type="text" value="{$result.description}">
                        </div>
                    </div>
                    <br/>
                    <div class="layui-form-item">
                        <label class="layui-form-label">{$language_tag.index_public_status}：</label>

                        <div class="layui-input-block">
                            <select name="status" id="status" lay-filter="required" >
                                <option value="1">{$language_tag.index_public_show}</option>
                                <option value="0" {if condition="0 eq $result['status']"}selected="seleted"{/if}>{$language_tag.index_public_disabled}</option>
                            </select>
                        </div>
                    </div>
                    <br/>
                    <div class="layui-form-item">
                        <div class="layui-input-block">
                            <input type="hidden" id="ota_menu_list_id" value="{$result.ota_menu_list_id}">
                            <button class="layui-btn nav-submit" lay-submit="" lay-filter="formDemo" id="">{$language_tag.index_public_submit}</button>
                            <a href="#" onClick="javascript :history.back(-1);"><button type="button" class="layui-btn layui-btn-primary">{$language_tag.index_public_back}</button></a>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>

    <div class="layui-footer">
        <!-- 底部固定区域 -->
        © layui.com - 底部固定区域
    </div>
</div>
{include file='public/foot_js' /}
<script>
    function menu_list_edit(){
        var ota_menu_list_id = $("#ota_menu_list_id").val();
        var title = $("#title").val();
        var status = $("#status").val();
        var style = $("#style").val();
        var type = $("#type").val();
        var author = $("#author").val();
        var description = $("#description").val();
        var keywords = $("#keywords").val();
        $.ajax({
            type: "POST",
            url: '/ota_system/editOtaMenuListAjax',
            data: {
                ota_menu_list_id:ota_menu_list_id,
                title:title,
                status:status,
                style:style,
                type:type,
                author:author,
                description:description,
                keywords:keywords,
            },
            success: function(data){
                //console.log(data);
                if(data.code!=200){
                    layer.msg(data.msg);
                    return false;
                }else if(data.code==200) {
                    layer.msg('操作成功',{time:1,end : function(layero, index){
                            //location.href="/ota_system/showOtaMenuListManage?status=1";
                            layer.load(2);
                            history.back(-1);
                        }
                    });
                }
            },

            error:function(XMLHttpRequest, textStatus, errorThrown){
                layer.msg('验证失败')
            }
        });
        return false;

    }
</script>
</body>
</html>
