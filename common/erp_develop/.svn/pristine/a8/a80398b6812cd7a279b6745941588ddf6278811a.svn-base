<!DOCTYPE html>
<html>
<head>
    {include file='public/head' /}
    <title>language-manage-add</title>

</head>
<body class="layui-layout-body">
<div class="layui-layout layui-layout-admin">

    <div class="layui-header">
        {include file='public/header' /}
    </div>

    <div class="layui-side layui-bg-black">
        <div class="layui-side-scroll">
            <!-- 左侧导航区域（可配合layui已有的垂直导航） -->
            {include file='public/left_menu' /}
        </div>
    </div>

    <div class="layui-body">

        <!-- 内容主体区域 -->
        <div style="padding: 15px;">
            <div class='layui-form-item'>
		   		<span class="layui-breadcrumb" lay-separator="-">
					<a>{$language_tag.index_public_homepage}</a>
                    <a>{$language_tag.index_public_product}</a>
				    <a>{$language_tag.index_product_showRouteTemplateManage_routeType}</a>
					<a><cite>{$language_tag.index_product_showRouteTypeManage_routeTypeInfo}</cite></a>
				</span>
            </div>
            <br/>
            <br/>

            <div class="layui-row">
                <form class="layui-form all-detail layui-col-md4" >
                    <div class="layui-form-item">
                        <label class="layui-form-label">{$language_tag.index_product_showRouteTypeManage_typeName}：</label>
                        <div class="layui-input-block">
                            {$route_type_result.route_type_name}
                        </div>
                    </div>
                    <div class="layui-form-item">
                        <label class="layui-form-label">{$language_tag.index_public_type}：</label>
                        <div class="layui-input-block">
                            {if in_array($route_type_result.pid, $cateList)}{$vl.route_type_name}{else/}一级{/if}
                        </div>
                    </div>
                    <div class="layui-form-item">
                        <label class="layui-form-label">{$language_tag.index_product_showRouteTypeEdit_circuit_type_principal}：</label>
                        <div class="layui-input-block">
                            {foreach $UserList as $vl}
                            {if condition="$vl.user_id eq $route_type_result.route_type_user_id"}{$vl.nickname}{/if}
                            {/foreach}
                        </div>
                    </div>
                    <div class="layui-form-item">
                        <label class="layui-form-label">{$language_tag.index_product_showRouteTypeManage_circuit_coding}：</label>
                        <div class="layui-input-block">
                            {$route_type_result.route_type_name}
                        </div>
                    </div>
                    <div class="layui-form-item">
                        <label class="layui-form-label">{$language_tag.index_public_company}：</label>
                        <div class="layui-input-block">
                                {foreach name='company_result'  item='vo'}
                                {if condition="$vo.company_id eq $Think.session.user.company_id"}{$MultilingualAll['company-company_name-'.$vo.company_id.'-'.$Think.session.user.language_id][0]['translate']|default=$vo.company_name}{/if}
                                {/foreach}
                        </div>
                    </div>
                    <div class="layui-form-item">
                        <label class="layui-form-label">{$language_tag.index_public_status}：</label>
                        <div class="layui-input-block">
                            {if condition="1 eq $route_type_result['status']"}{$language_tag.index_public_show}{/if}
                            {if condition="0 eq $route_type_result['status']"}{$language_tag.index_public_disabled}{/if}
                        </div>
                    </div>

                    <div class="layui-form-item">
                        <div class="layui-input-block">
                            <a href='/product/showRouteTypeManage?status=1&pid=0'><button type="button" class="layui-btn layui-btn-primary">{$language_tag.index_public_back}</button></a>
                        </div>
                    </div>
                </form>
            </div>

        </div>
    </div>

    <div class="layui-footer">
        <!-- 底部固定区域 -->
        © layui.com - 底部固定区域
    </div>
</div>
{include file='public/foot_js' /}
<script src='__STATIC__/javascript/system/product.js'></script>
</body>
</html>
