/*行程用餐*/
function routeEach(nums,routeEach,lunch) {
    if(routeEach.length>0&&lunch){
        for(var c=0;c<routeEach.length;c++){
            if(routeEach[c]==nums){
                return routeEach[c]=='1'?'早餐:'+lunch:routeEach[c]=='2'?'午餐:'+lunch:routeEach[c]=='3'?'晚餐:'+lunch:'-';
            }
        }
    }else{
        return "-";
    }
}
/*游客类型*/
function customerType(type) {
    if(type && type!=null){
        return type==1?'成人':type==2?'占床儿童':type==3?'不占床儿童':type==4?'老人':'-'
    }else if(type==null){
        return "占位";
    }else{
        return "-";
    }
}
/*性别*/
function gender(gender) {
    return gender==1?'男':gender==2?'女':'-'
}
/*证件类型*/
function cardType(cardType) {
    return cardType==1?'护照':cardType==2?'身份证':'-'
}

function newRoom(num) {
    var obj=num.toString();
    var newRoom='';
    if(obj.split('1').length-1>0){
        newRoom+='<span>'+roomType('1')+'*'+(obj.split('1').length-1)+',</span>';
    }
    if(obj.split('2').length-1>0){
        newRoom+='<span>'+roomType('2')+'*'+(obj.split('2').length-1)+',</span>';
    }
    if(obj.split('3').length-1>0){
        newRoom+='<span>'+roomType('3')+'*'+(obj.split('3').length-1)+',</span>';
    }
    if(obj.split('4').length-1>0){
        newRoom+='<span>'+roomType('4')+'*'+(obj.split('4').length-1)+',</span>';
    }
    return newRoom;
}

function roomType(roomType) {
    if(roomType!=null){
        return roomType=='1'?'双人房':roomType=='2'?'大床房':roomType=='3'?'单人房':roomType=='4'?'加床':'-'
    }else{
        return "-";
    }
}
/*时间*/
function isTime(time,isYmd) {
    if(time && time!=null){
        if(time=='0'){
            return "-";
        }else{
            if(isYmd=='isYmd'){
                return date("Y-m-d",time)
            }else{
                return date("H:i",time)
            }
        }
    }else{
        return "-";
    }
}

/*判断是否是null或没有字段*/
function isFieldName(fieldName) {
    if(fieldName&&fieldName!=''){
        return fieldName;
    }else{
        return "";
    }
}

//占位不显示信息
function noDate(type,date) {
    if(type==null){
        return "-"
    }else{
        if(date&&date!=''){
            return date;
        }else{
            return "-";
        }
    }
}

