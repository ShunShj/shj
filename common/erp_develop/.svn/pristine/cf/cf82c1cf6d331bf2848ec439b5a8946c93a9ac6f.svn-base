<!DOCTYPE html>
<head>
	{include file='public/head' /}
  	<title>layout 后台大布局 - Layui</title>
 
</head>
<body class="layui-layout-body">
<div class="layui-layout layui-layout-admin">
  <div class="layui-header">
	{include file='public/header' /}
  </div>
  
  <div class="layui-side layui-bg-black">
    <div class="layui-side-scroll">
      <!-- 左侧导航区域（可配合layui已有的垂直导航） -->
		{include file='public/left_menu_web' /}
    </div>
  </div>
  
  <div class="layui-body">
  
		<!-- 内容主体区域 -->
		<div style="padding: 15px 15px 0px;">
		<div class="body-top">
			<div class='layui-form-item'>
			<span class="layui-breadcrumb" lay-separator="-">
				<a>{$Think.lang.index_public_homepage}</a>
				<a>管网管理</a>
			  	<a><cite>菜单管理</cite></a>
			</span>
			</div>
			<br/>
			<div class='layui-block input-inline' >
				<form method='get' action='/ota_system/showOtaMenuManage'>
					<div class='layui-input-inline'>
						<input type="text" name="website" value="{$Think.get.website}"  lay-verify="" placeholder="网站地址" autocomplete="off" class="layui-input">
					</div>
					<div class='layui-input-inline'>
						<div class="layui-form">
							<select name="status" lay-verify="required">
								<option value="2" {if condition="$Think.get.status eq 2"}selected='selected' {/if}>-{$Think.lang.index_source_showCruisesManage_search_status}-</option>
								<option value="1" {if condition="$Think.get.status eq 1"}selected='selected' {/if}>{$Think.lang.index_public_show}</option>
								<option value="0" {if condition="$Think.get.status eq 0"}selected='selected' {/if}>{$Think.lang.index_public_disabled}</option>
							</select>
						</div>
					</div>
					<div class='layui-button-inline layui-search-inline'>
						<button class="layui-btn nav-search">{$Think.lang.index_public_search}</button>
					</div>
				</form>
				<div class='layui-button-inline'>
					<span><a href='/ota_system/showCompanyWebsiteAdd'><button class="layui-btn nav-add">添加菜单</button></a></span>
				</div>
			</div>
			<hr><br>
		</div>
		<div class="table-nont user-manage pageHeight">
			<table class="layui-table" >
				<thead>
				<tr>
					<th>ID</th>
					<th>描述</th>
					<th>网站地址</th>
					<th>状态</th>
					<th>创建时间</th>
					<th>创建人</th>
					<th class="layui-table-width">{$Think.lang.index_source_operation}</th>
				</tr>

				</thead>
				<tbody>
				{foreach name="data" item="vo" }
				<tr>
					<th>{$vo.ota_company_website_id}</th>
					<th>{$vo.describe}</th>
					<th>{$vo.website}</th>
					<th>{if condition="$vo.status eq 1"}{$Think.lang.index_public_show}{else/}{$Think.lang.index_public_disabled}{/if}</th>
					<th>{$vo.create_time|date="y-m-d",###}</th>
					<th>{$vo.nickname}</th>
					<th><span><a href='/ota_system/showCompanyWebsiteEdit/ota_company_website_id/{$vo.ota_company_website_id}'><button class="layui-btn layui-btn-sm hover-edit layui-btn-primary">{$Think.lang.index_public_update}</button></a></span>
						<span><a href='/ota_system/showCompanyWebsiteInfo/ota_company_website_id/{$vo.ota_company_website_id}'><button class="layui-btn layui-btn-sm hover-details layui-btn-primary">{$Think.lang.index_public_info}</button></a></span></th>
				</tr>
				{/foreach}
				</tbody>
			</table>
		</div>

		<div class="listButtom">
			<!--加载分页-->
			{include file='public/page' /}
		</div>
    </div>
  </div>
  
  <div class="layui-footer">
    <!-- 底部固定区域 -->
    © layui.com - 底部固定区域
  </div>
</div>
{include file='public/foot_js' /}
<script>
  //JavaScript代码区域
  var layer = layui.layer
</script>
</body>
</html>