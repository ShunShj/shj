<script>
    $(function(){
        var layer = layui.layer  ,form = layui.form;
        //选择国家更新城市
        form.on('select(nation)',function(data){
            var cid = data.value;
            $.ajax({
                type: "POST",
                url: '/source/getCityAjax',
                data: {
                    'cid': cid,
                },
                'dataType':'json',
                success: function (a) {
//                    console.log(a);
                    var data = a.data;
                    console.log(data);
                    $('#country_id').html('');
                    var h = "<option ></option>";
                    for(i in data){
                        h += "<option value='"+data[i]['country_id']+"'>"+data[i]['country_name']+"</option>";
                    }
                    $('#country_id').html(h);
                    form.render();

                },
                error:function(XMLHttpRequest, textStatus, errorThrown){
                    //console.log(errorThrown)
                    layer.msg('{$language_tag.index_public_verificationFailure}')

                }
            });
        });


    });

    function add() {
        $.ajax({
            type: "POST",
            url: '/source/addScenicSpotSourceAjax',
            data: $('#form1').serializeArray(),
            success: function (data) {
                if(data.code!=200){
                    layer.msg(data.msg)
                    return false;
                }else if(data.code==200){
                    layer.msg('{$language_tag.index_public_success}',{time:1,end : function(layero, index){
                        history.back(-1);
                    }
                    });
                }
            },
            error:function(XMLHttpRequest, textStatus, errorThrown){
                //console.log(errorThrown)
                layer.msg('{$language_tag.index_public_verificationFailure}');
            }
        });
        return false;
    }
</script>
