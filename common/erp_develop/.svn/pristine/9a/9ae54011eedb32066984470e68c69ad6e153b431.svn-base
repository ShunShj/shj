<script>
    $(function () {
        var navWidth=0;
        //init layout
        $(".nav>a").each(function () {
            var width = $(this).outerWidth(), height = $(this).outerHeight(), parH = $(this).closest(".nav").height();
            var mH = (parH - height) / 2;
            var parWidth = width + 25;
            navWidth+=parWidth+5;
            $(this).closest(".nav").width(parWidth);
            $(this).siblings(":not(.first_mark)").width(parWidth).height(parH / 2);
            $(this).addClass("ab_position");
            $(this).css("top", mH);
        });

        $(".tab_border").width(navWidth);


        $(".nav>span").hover(setColor, removeColor);
        $(".nav>a").hover(setColor, removeColor);
        var h = '';
        $(".nav>span,.nav>a").click(function (e) {
            e.preventDefault();
            var parNav=$(this).closest(".nav");
            if(parNav.hasClass("done_step")||parNav.hasClass("active_step")||parNav.hasClass("editing_step")){
                var in1 = $('.step').find('.active_step').data('info');
                //alert(in1);
                h =parNav.find("a").attr("href");
                var urt = '';
                switch (in1){
                    case 1 : urt='/booknexus_tour/createTourFormAjax';break;
                    case 2 : urt='/booknexus_tour/addTourDatesFormAjax';break;
                    case 3 : urt='/booknexus_tour/addTourItineraryFormAjax';break;
                    case 4 : urt='/booknexus_tour/addTourRoomFormAjax';break;
                    case 5 : urt='/booknexus_tour/addTourTransferFormAjax';break;
                    case 6 : urt='/booknexus_tour/addTourCommissionFormAjax';break;
                    case 7 : urt='/booknexus_tour/addTourOptionsFormAjax';break;
                    case 8 : urt='/booknexus_tour/addTourSettingFormAjax';break;
                    default :   break;
                }
                $.ajax({
                    type: "POST",
                    url: urt,
                    data:  $('#form1').serializeArray(),
                    success: function(data){
                        //console.log(data);
                        if(data.code!=200){
                            layer.msg(data.msg);
                            return false;
                        }else if(data.code==200) {
                            layer.msg('操作成功',{time:2000,end : function(layero, index){
                                window.location.href=h;
                            }
                            });
                        }
                    },
                    error:function(XMLHttpRequest, textStatus, errorThrown){
                        layer.msg('验证失败')
                    }
                });
                return false;

            }
        });

        function setColor(e) {
            e.preventDefault();
            var parNav=$(this).closest(".nav");
            if(parNav.hasClass("done_step")||parNav.hasClass("active_step")||parNav.hasClass("editing_step")){
                parNav.addClass("hover");
            }
        }

        function removeColor(e) {
            $(this).closest(".nav").removeClass("hover");
            e.preventDefault();
        }




    })


</script>