                        <th>{if condition="$vo.status eq 1"}{$Think.lang.index_public_show}{else/}{$Think.lang.index_public_disabled}{/if}</th>
                        <th>
                            <span style="{:action('index/auth/check_auth',['role_id'=>'218'])}"><a href='/source/showSingleSourceEdit?single_source_id={$vo.single_source_id}'><button class="layui-btn layui-btn-sm hover-edit layui-btn-primary">{$Think.lang.index_public_update}</button></a></span>
                            <span style="{:action('index/auth/check_auth',['role_id'=>'219'])}"><a href='/source/showSingleSourceInfo?single_source_id={$vo.single_source_id}'><button class="layui-btn layui-btn-sm hover-details layui-btn-primary">{$Think.lang.index_public_info}</button></a></span>
                            <!--<a href='/source/showSingleSourceEditLanguage?source_number={$vo.source_number}'><button class="layui-btn layui-btn-sm hover-polylingual layui-btn-primary">{$Think.lang.index_public_language}</button></a>-->
                        </th>
                    </tr>
                    {/foreach}
                    </tbody>

                </table>
            <div class="listButtom">
                {include file='public/page' /}
            </div>
            </div>
