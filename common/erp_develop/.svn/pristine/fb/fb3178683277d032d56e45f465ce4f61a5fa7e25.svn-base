                <tr>
                    <th>{$Think.lang.index_source_showSingleSourceManage_id}</th>
                    <th>{$Think.lang.index_source_showSingleSourceManage_supplier_name}</th>
                    <th>{$Think.lang.index_source_showSingleSourceSource_single_source_name}</th>
                    <th>{$Think.lang.index_public_status}</th>
                    <th>{$Think.lang.index_source_operation}</th>
                </tr>
                </thead>

                    <tbody>
                    {foreach name="data" item="vo" }
                    <tr>
                        <th>{$vo.single_source_id}</th>
                        <th>{$MultilingualAll['supplier-supplier_name-'.$vo.supplier_id.'-'.$Think.session.user.language_id][0]['translate']|default=$vo.supplier_name}</th>
