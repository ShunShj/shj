    	            }else if(data.code==200) {
    	                layer.msg('操作成功',{time:1,end : function(layero, index){
    	                		location.href='/branchcompany/showBranchProductTypeManage'
    	                    }
    	                });
    	            }
    	        },
    	        error:function(XMLHttpRequest, textStatus, errorThrown){
    	            layer.msg('验证失败')
    	        }
    	    });
      }
    });


	
	
	
	
})





