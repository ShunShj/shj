                            &lt;!&ndash;<div class='layui-input-inline'>&ndash;&gt;
                            &lt;!&ndash;<input type="text" id="search_ID" name="search_ID" value="{$setVehicleManage.search_ID}"   placeholder="ID" class="layui-input">&ndash;&gt;
                            &lt;!&ndash;</div>&ndash;&gt;
                            <div class='layui-input-inline'>

                            </div>
                            &lt;!&ndash;<div class='layui-input-inline'>&ndash;&gt;
                            &lt;!&ndash;<input type="text" id="search_operation" name="search_operation" value=""  placeholder="操作人" class="layui-input">&ndash;&gt;
                            &lt;!&ndash;</div>&ndash;&gt;


                            <div class='layui-button-inline layui-search-inline'>
                                <button class="layui-btn nav-search">{$language_tag.index_public_search}</button>
                                &lt;!&ndash;<a href="/source/clearVehicleManage" class="layui-btn layui-btn-primary">清除</a>&ndash;&gt;
                            </div>
                        </div>-->
                    </form>
                </div>
            </div>
            <div class="content-bg">
                <span style="{:action('index/auth/check_auth',['role_id'=>'207'])}"><a href='/source/showVehicleSourceAdd'><button class="layui-btn nav-add layui-btn-sm">{$language_tag.index_source_showVehicleManage_add_source}</button></a></span>
                <span style="{:action('index/auth/check_auth',['role_id'=>'205'])}"><a href="/source/showVehicleSourceManage?id=" class="layui-btn nav-look layui-btn-sm">{$language_tag.index_source_showVehicleManage_look_all_source}</a></span>
                <hr>
                <div class="table-nont user-manage company-pageHeight">
                    <table class="layui-table" id="language-table">
                        <thead>
                        <tr>
                            <th>{$language_tag.index_source_showVehicleManage_id}</th>
                            <th>{$language_tag.index_source_showVehicleManage_supplier_name}</th>
                            <th>{$language_tag.index_public_status}</th>
                            <!--<th>最后操作时间</th>-->
                            <!--<th>操作人</th>-->
                            <th>{$language_tag.index_finance_showReceivableManage_vehicle}</th>
