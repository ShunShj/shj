<!DOCTYPE html>
<html>
<head>
    {include file='public/head' /}
    <title>language-manage</title>

</head>
<body class="layui-layout-body">
<div class="layui-layout layui-layout-admin">
    <div class="layui-header">
        {include file='public/header' /}
    </div>

    <div class="layui-side layui-bg-black">
        <div class="layui-side-scroll">
            <!-- 左侧导航区域（可配合layui已有的垂直导航） -->
            {include file='public/left_menu' /}
        </div>
    </div>

    <div class="layui-body">

        <!-- 内容主体区域 -->
        <div style="padding: 15px;">
            <div class='layui-form-item'>
                <span class="layui-breadcrumb" lay-separator="-">
                    <a>{$language_tag.index_public_homepage}</a>
                    <a>{$language_tag.index_public_system}</a>
                    <a><cite>{$language_tag.index_product_showRouteTemplateManage_routeType}</cite></a>
                </span>
            </div>
            <br/><br/>
            <div class='layui-block input-inline'>
                <form method='get' action='/system/showRouteTypeManage'>
                    <div class='layui-input-inline'>
                        <div class="layui-form">
                            <select id="" name="status">
                                <option value="0" selected="">{$language_tag.index_public_status}</option>
                                <option value="1" {if condition="$Think.get.status eq 1"}selected='selected' {/if}>{$language_tag.index_public_show}</option>
                                <option value="2" {if condition="$Think.get.status eq 2"}selected='selected' {/if}>{$language_tag.index_public_disabled}</option>
                            </select>
                        </div>
                    </div>
                    <div class='layui-input-inline'>
                        <input type="text" id="" name="route_type_name" value="{$Think.get.route_type_name}"  placeholder="{$language_tag.index_system_showCountryManage_name}" class="layui-input">
                    </div>
                    <div class='layui-input-inline'>
                        <div class="layui-form">
                            <select id="" name="type">
                                <option value="0" selected="">{$language_tag.index_public_type}</option>
                                <option value="1" {if condition="$Think.get.type eq 1"}selected='selected' {/if}>{$language_tag.index_finance_showAgentExpenseManage_update_chinese_group}</option>
                                <option value="2" {if condition="$Think.get.type eq 2"}selected='selected' {/if}>{$language_tag.index_finance_showAgentExpenseManage_update_foreigners_group}</option>
                            </select>
                        </div>
                    </div>
                    <div class='layui-button-inline layui-number-inline'>
                        <input type="hidden" name="supplier_type_id" value="4">
                        <button class="layui-btn nav-search" >{$language_tag.index_public_search}</button>
                    </div>
                </form>
                <div class='layui-button-inline'>
                    <a href='/system/showRouteTypeAdd'><button class="layui-btn nav-add">{$language_tag.index_product_showRouteTypeManage_addRouteType}</button></a>
                </div>
            </div>
            <hr><br>
            <div class="table-nont">
                <table class="layui-table" id="language-table">
                    <thead>
                    <tr>
                        <th>{$language_tag.index_source_showHotelSource_id}</th>
                        <th>{$language_tag.index_product_showRouteTypeManage_routeTypeName}</th>
                        <th>{$language_tag.index_product_showRouteTemplateManage_routeType}</th>
                        <th>{$language_tag.index_public_status}</th>
                        <th class="layui-table-width">{$language_tag.index_source_operation}</th>
                    </tr>
                    </thead>

                    <tbody>
                    {foreach name="data" item="vo" }
                    <tr>
                        <th>{$vo.route_type_id}</th>
                        <th>{$vo.route_type_name}</th>
                        <th>{if condition="$vo.type eq 1"}{$language_tag.index_finance_showAgentExpenseManage_update_chinese_group}{else/}{$language_tag.index_finance_showAgentExpenseManage_update_foreigners_group}{/if}</th>
                        <th>{if condition="$vo.status eq 1"}{$language_tag.index_public_show}{else/}{$language_tag.index_public_disabled}{/if}</th>
                        <th><a href='/system/showRouteTypeEdit?route_type_id={$vo.route_type_id}'><button class="layui-btn layui-btn-sm hover-edit layui-btn-primary">{$language_tag.index_public_update}</button></a> <a href='/system/showRouteTypeInfo?route_type_id={$vo.route_type_id}'><button class="layui-btn layui-btn-sm hover-details layui-btn-primary">{$language_tag.index_public_info}</button></a></th>
                    </tr>
                    {/foreach}
                    </tbody>

                </table>
            </div>

        </div>
    </div>
</div>

<div class="layui-footer">
    <!-- 底部固定区域 -->
    © layui.com - 底部固定区域
</div>
</div>
{include file='public/foot_js' /}
<script src='__STATIC__/javascript/system/source.js'></script>

</body>
</html>
