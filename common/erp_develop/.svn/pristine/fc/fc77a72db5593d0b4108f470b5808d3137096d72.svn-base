<!DOCTYPE html>
<html>
<head>
    {include file='public/head' /}
    <title>language-manage-add</title>

</head>
<body class="layui-layout-body">
<div class="layui-layout layui-layout-admin">

    <div class="layui-header">
        {include file='public/header' /}
    </div>

    <div class="layui-side layui-bg-black">
        <div class="layui-side-scroll">
            <!-- 左侧导航区域（可配合layui已有的垂直导航） -->
            {include file='public/left_menu' /}
        </div>
    </div>

    <div class="layui-body">

        <!-- 内容主体区域 -->
        <div style="padding: 15px;">
            <div class='layui-form-item'>
		   		<span class="layui-breadcrumb" lay-separator="-">
                    <a>{$language_tag.index_public_homepage}</a>
                    <a>{$language_tag.index_source_showSingleSourceManage_source_administrate}</a>
                    <a>{$language_tag.index_source_showSingleSourceManage_single_source_administrate}</a>
                    <a>{$language_tag.index_source_showSingleSourceSource_all_source}</a>
					<a><cite>{$language_tag.index_source_showSingleSourceManage_add_source}</cite></a>
				</span>
            </div>
            <br/>
            <div class="layui-row layui-col-space10">
                <div class="layui-col-md4 layui-col-md-offset4" style="position: relative;left: 10px;top: 50px;">
					<span><a href='/source/showSupplierAdd'><button
                            class="layui-btn nav-add layui-btn-sm">{$language_tag.index_source_showSupplierManage_add_supplier}</button></a></span>
                </div>
            </div>
            <br/>
            <form class="layui-form" onSubmit="return single_source_Add()">
                <div class="layui-row layui-col-space10">
                    <div class="layui-col-md4">
                        <div class="layui-form-item">
                            <label class="layui-form-label input-required">{$language_tag.index_public_supplier}:</label>
                            <div class="layui-input-block">
                                <select name="supplier_id" id='single_source_supplier_id' lay-verify="required" lay-search>
                                    <option></option>
                                    {foreach name='data' item='vo'}
                                    <option value="{$vo.supplier_id}" {$vo.supplier_id==$_GET['id']?"selected":''}>{$MultilingualAll['supplier-supplier_name-'.$vo.supplier_id.'-'.$Think.session.user.language_id][0]['translate']|default=$vo.supplier_name}</option>
                                    {/foreach}
                                </select>
                            </div>
                        </div>
                    </div>
                    <!--<div class="layui-col-md4">-->
                        <!--<div class="layui-form-item">-->
                            <!--<label class="layui-form-label input-required">所属代理商:</label>-->
                            <!--<div class="layui-input-block">-->
                                <!--<select name="agent_id" id="single_source_agent_id" lay-search >-->
                                    <!--<option></option>-->
                                    <!--{foreach name='data_agent' item='vo'}-->
                                    <!--<option value="{$vo.supplier_id}">{$vo.supplier_name}</option>-->
                                    <!--{/foreach}-->
                                <!--</select>-->
                            <!--</div>-->
                        <!--</div>-->
                    <!--</div>-->
                </div>
                <div class="layui-row layui-col-space10">
                    <div class="layui-col-md4 ">
                        <div class="layui-form-item ">
                            <label class="layui-form-label input-required">{$language_tag.index_public_company}:</label>
                            <div class="layui-input-block ">
                                <select {$Think.session.user.company_id!=1?'disabled':''} name="choose_company_id" id="choose_company_id" lay-verify="required">
                                    <option value="0">{$language_tag.index_source_showSingleSourceSource_choose_own_company}</option>
                                    {foreach name='company_result'  item='vo'}
                                    <option value="{$vo.company_id}"{if condition="$vo.company_id eq  $Think.session.user.company_id"} selected='selected'{/if}>{$MultilingualAll['company-company_name-'.$vo.company_id.'-'.$Think.session.user.language_id][0]['translate']|default=$vo.company_name}</option>
                                    {/foreach}
                                </select>
                            </div>
                        </div>
                    </div>
                    <div class="layui-col-md4">
                        <div class="layui-form-item">
                            <label class="layui-form-label input-required">{$language_tag.index_source_showSingleSourceSource_single_source_name}:</label>
                            <div class="layui-input-block">
                                <input name="single_source_name" maxlength="300" id="single_source_name" lay-verify="required" placeholder="{$language_tag.index_source_showSingleSourceSource_input_single_source_name}" autocomplete="off" class="layui-input" type="text">
                            </div>
                        </div>
                    </div>
                    <div class="layui-col-md4">
                        <div class="layui-form-item">
                            <label class="layui-form-label">{$language_tag.index_public_status}:</label>
                            <div class="layui-input-block">
                                <select name="status" id='single_source_status' lay-verify="required">
                                    <option value="1" selected>{$language_tag.index_public_show}</option>
                                    <option value="2">{$language_tag.index_public_disabled}</option>
                                </select>
                            </div>
                        </div>
                    </div>
                </div>
                <br/>
                <hr/>
                <br/>
                <div class="layui-inline">
                    <label class="layui-form-label input-required">{$language_tag.index_source_showSingleSourceSource_payment_currency_type}</label>
                    <div class="layui-input-inline">
                        <select name="payment_currency_type" id="payment_currency_type"  class=layui-input-inline" required lay-verify="required" >
                            <option value="">{$language_tag.index_source_showSingleSourceSource_choose}</option>
                            {foreach name='currency_data_result '  item='vo'}
                            <option  value="{$vo.currency_id}">{$MultilingualAll['currency-currency_name-'.$vo.currency_id.'-'.$Think.session.user.language_id][0]['translate']|default=$vo.currency_name}</option>
                            {/foreach}
                        </select>
                    </div>
                </div>
                <!--<div class="layui-row layui-col-space10">-->
                    <!--<div class="layui-col-md4">-->
                    <!--<div class="layui-form-item">-->
                    <!--<label class="layui-form-label">支付币种:</label>-->
                    <!--<div class="layui-input-block">-->
                    <!--<select name="" id="" lay-verify="">-->
                    <!--<option value="0">请选择支付币种</option>-->
                    <!--{foreach name='currency_result'  item='vo'}-->
                    <!--<option value="{$vo.currency_id}">{$vo.currency_name}</option>-->
                    <!--{/foreach}-->
                    <!--</select>-->
                    <!--</div>-->
                    <!--</div>-->
                    <!--</div>-->
                <!--</div>-->
                <div class="layui-row layui-col-space10">
                    <div class="layui-col-md4">
                        <div class="layui-form-item">
                            <label class="layui-form-label input-required">{$language_tag.index_public_price}:</label>
                            <div class="layui-input-block table-nont">
                                <table class="layui-table">
                                    <colgroup>
                                        <col width="20%">
                                        <col width="20%">
                                        <col width="25%">
                                        <!--<col width="20%">-->
                                    </colgroup>
                                    <thead>
                                    <tr>
                                        <th>{$language_tag.index_public_type_price}</th>
                                        <th>{$language_tag.index_public_costprice}</th>
                                        <th>{$language_tag.index_public_settlementprice}</th>
                                        <!--<th>建议客户售价</th>-->
                                    </tr>
                                    </thead>
                                    <tbody>
                                    <tr>
                                        <td>{$language_tag.index_public_count_price}:</td>
                                        <td>
                                            <input type="text" name="normal_price" id="single_source_normal_price" class="layui-input" required lay-verify="required|number">
                                        </td>
                                        <td>
                                            <input type="text" name="normal_settlement_price" id="single_source_normal_settlement_price" class="layui-input" required lay-verify="required|number">
                                        </td>
                                        <!--<td>-->
                                            <!--<input type="text" name="normal_retail_price" id="flight_normal_retail_price" lay-verify="required" autocomplete="off" class="layui-input">-->
                                        <!--</td>-->
                                    </tr>
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>
                <br/>
                <br/>
                <br/>
                <!--<div class="layui-form-item layui-form-text">-->
                    <!--<label class="layui-form-label">说明:</label>-->
                    <!--<div class="layui-input-block">-->
                        <!--<textarea id="single_source_remark" name="remark" placeholder="请输入内容" class="layui-textarea"></textarea>-->
                    <!--</div>-->
                <!--</div>-->
                <br/>
                <div class="layui-form-item">
                    <div class="layui-input-block all-button-center">
                        <button class="layui-btn nav-submit" lay-submit="" lay-filter="formDemo" id="single_source_add_button">{$language_tag.index_public_submit}</button>
                        <a href='javascript:history.back(-1)'><button type="button" class="layui-btn layui-btn-primary">{$language_tag.index_public_back}</button></a>
                    </div>
                </div>
            </form>
        </div>
    </div>

    <div class="layui-footer">
        <!-- 底部固定区域 -->
        © layui.com - 底部固定区域
    </div>
</div>
{include file='public/foot_js' /}
<script src='__STATIC__/javascript/system/source.js'></script>
</body>
</html>
