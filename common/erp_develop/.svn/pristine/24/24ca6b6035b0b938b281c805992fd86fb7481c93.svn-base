<!DOCTYPE html>
<html>
<head>
    {include file='public/head' /}
    <title>客户管理</title>

</head>
<body class="layui-layout-body">
<div class="layui-layout layui-layout-admin">
    <div class="layui-header">
        {include file='public/header' /}
    </div>

    <div class="layui-side layui-bg-black">
        <div class="layui-side-scroll">
            <!-- 左侧导航区域（可配合layui已有的垂直导航） -->
            {include file='public/left_menu' /}
        </div>
    </div>

    <div class="layui-body layui-body-bg">

        <!-- 内容主体区域 -->
        <div style="padding: 15px;">
            <div class="body-top">
                <div class='layui-form-item'>
                <span class="layui-breadcrumb" lay-separator="-">
                    <a>{$Think.lang.index_public_homepage}</a>
                    <a>{$Think.lang.index_branchcompany_showBranchProductManage_branchManagement}</a>
                    <a><cite>客户来源</cite></a>
                </span>
                </div>
                <div class='layui-block all-search-bg'>
                    <form class="layui-form" action="/branchcompany/showCustomerSourceManage" method="get" >
                        <div class="layui-row">
                            <div class="layui-col-md4">
                                <div class="layui-form-item">
                                    <label class="layui-form-label">{$Think.lang.index_public_status}:</label>
                                    <div class="layui-input-block">
                                        <select name="status">
                                            <option value="2" {$_GET['status']=='2'?'selected':''} >{$Think.lang.index_product_showRouteTemplateManage_status}</option>
                                            <option value="1" {$_GET['status']=='1'?'selected':''} }>{$Think.lang.index_public_show}</option>
                                            <option value="0" {$_GET['status']=='0'?'selected':''}>{$Think.lang.index_public_disabled}</option>
                                        </select>
                                    </div>
                                </div>
                            </div>
                            <div class="layui-col-md4">
                                <div class="layui-form-item">
                                    <label class="layui-form-label">客户来源名称:</label>
                                    <div class="layui-input-block">
                                        <input type="text" name="customer_source_name" value="{$_GET['customer_source_name']}" placeholder="" class="layui-input">
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="layui-row">
                            <div class="layui-col-md4 layui-col-md-offset4">
                                <div class='input-inline all-button-center pages-search-margin'>
                                    <button class="layui-btn nav-search">{$Think.lang.index_public_search}</button>
                                </div>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
            <div class="content-bg">
                <span><a href='/branchcompany/showCustomerSourceAdd'><button class="layui-btn nav-add layui-btn-sm">添加客户来源</button></a></span>
                <hr>
                <div class="table-nont user-manage company-pageHeight">
                    <table class="layui-table" id="language-table">
                        <thead>
                        <tr>
                            <th>编号ID</th>
                            <th>所属分公司</th>
                            <th>客户来源名称</th>
                            <th>创建时间</th>
                            <th>操作人</th>
                            <th class="layui-table-width">{$Think.lang.index_source_operation}</th>
                        </tr>
                        </thead>

                        {empty name='data'}

                        {else /}
                        {foreach name='data' item='vo'}
                        <tr>
                            <th>{$vo.customer_source_id}</th>
                            <th>{$vo.company_name}</th>
                            <th>{$vo.customer_source_name}</th>
                            <th>{$vo.create_time|date='Y-m-d',###}</th>
                            <th>{$vo.update_username}</th>
                            <th>
                                <span><a href='/branchcompany/showCustomerSourceEdit?customer_source_id={$vo.customer_source_id}'><button class="layui-btn layui-btn-sm hover-edit layui-btn-primary">{$Think.lang.index_public_update}</button></a></span>
                                <span><a href='/branchcompany/showCustomerSourceInfo?customer_source_id={$vo.customer_source_id}'><button class="layui-btn layui-btn-sm hover-details layui-btn-primary">{$Think.lang.index_public_info}</button></a></span>
                            </th>
                        </tr>
                        {/foreach}
                        {/empty}
                        </tbody>

                    </table>
                </div>
               <div class="listButtom">

                <!--加载分页-->
                {include file='public/page' /}

                </div>
            </div>
        </div>
    </div>

    <div class="layui-footer">
        <!-- 底部固定区域 -->
        © layui.com - 底部固定区域
    </div>
</div>
{include file='public/foot_js' /}
</body>
</html>
