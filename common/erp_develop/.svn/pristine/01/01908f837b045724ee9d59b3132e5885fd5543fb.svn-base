<!DOCTYPE html>
<html>
<head>
    {include file='public/head' /}
    <title>language-manage</title>
    <link href="__STATIC__/css/source.css" rel="stylesheet">
</head>
<body class="layui-layout-body">
<div class="layui-layout layui-layout-admin">
    <div class="layui-header">
        {include file='public/header' /}
    </div>

    <div class="layui-side layui-bg-black">
        <div class="layui-side-scroll">
            <!-- 左侧导航区域（可配合layui已有的垂直导航） -->
            {include file='public/left_menu' /}
        </div>
    </div>

    <div class="layui-body">

            <!-- 内容主体区域 -->
            <div style="padding: 15px 15px 0px;">
                <div class="body-top">
                    <div class='layui-form-item'>
                    <span class="layui-breadcrumb" lay-separator="-">
                        <a>{$language_tag.index_public_homepage}</a>
                        <a>{$language_tag.index_source_showSupplierManage_supplier_administrate}</a>
                        <a><cite>{$language_tag.index_source_showAgentManage_manage_agent}</cite></a>
                    </span>
                    </div>
                    <br/>
                    <div class='layui-block input-inline'>
                        <form method='get' action='/source/showAgentManage'>
                            <div class='layui-input-inline'>
                                <div class="layui-form">
                                    <select id="" name="status">
                                        <option value="0" selected="">{$language_tag.index_public_status}</option>
                                        <option value="1" {if condition="$Think.get.status eq 1"}selected='selected' {/if}>{$language_tag.index_public_show}</option>
                                        <option value="2" {if condition="$Think.get.status eq 2"}selected='selected' {/if}>{$language_tag.index_public_disabled}</option>
                                    </select>
                                </div>
                            </div>
                            <div class='layui-input-inline'>
                                <input type="text" name="supplier_number" placeholder="{$language_tag.index_system_showLanguageManage_id}" class="layui-input" value="{$Think.get.supplier_number}">
                            </div>
                            <div class='layui-input-inline'>
                                <input type="text" name="supplier_name" maxlength="300" value="{$Think.get.supplier_name}" placeholder="{$language_tag.index_public_agent_name}" class="layui-input">
                            </div>
                            <div class='layui-input-inline'>
                                <input type="text" name="linkman" placeholder="{$language_tag.index_system_showCompanyManage_linkman}" class="layui-input" value="{$Think.get.linkman}">
                            </div>
                            <div class='layui-button-inline layui-search-inline'>
                                <button class="layui-btn nav-search" >{$language_tag.index_public_search}</button>
                            </div>
                        </form>
                        <div class='layui-button-inline'>
                        <a href='/source/showAgentAdd'><button class="layui-btn nav-add">{$language_tag.index_source_showAgentAdd_add_agent}</button></a>
                        </div>
                    </div>
                    <hr><br>
                </div>
                <div class="table-nont user-manage pageHeight">
                    <table class="layui-table" id="language-table">
                        <thead>
                        <tr>
                            <th>{$language_tag.index_system_showLanguageManage_id}</th>
                            <th>{$language_tag.index_public_agent_name}</th>
                            <th>{$language_tag.index_system_showCompanyManage_linkman}</th>
                            <th>{$language_tag.index_public_status}</th>
                            <th>{$language_tag.index_public_source}</th>
                            <th class="layui-table-width">{$language_tag.index_source_operation}</th>
                        </tr>
                        </thead>

                        <tbody>
                        {foreach name="data" item="vo"}
                        <tr>
                            <th>{$vo.supplier_number}</th>
                            <th>{$vo.supplier_name}</th>
                            <th>{$vo.linkman}</th>
                            <th>{if condition="$vo.status eq 1"}{$language_tag.index_public_show}{else/}{$language_tag.index_public_disabled}{/if}</th>
                            <th>
                                <a href='/source/showAgentSource?supplier_id={$vo.supplier_id}'><button class="layui-btn layui-btn-sm hover-edit layui-btn-primary ">{$language_tag.index_public_source}</button></a>
                            </th>
                            <th>
                                {if condition="$vo.is_company eq 0"}
                                <a href='/source/showAgentEdit?supplier_id={$vo.supplier_id}'><button class="layui-btn layui-btn-sm hover-edit layui-btn-primary">{$language_tag.index_public_update}</button></a>
                                {/if}
                                <a href='/source/showAgentInfo?supplier_id={$vo.supplier_id}'><button class="layui-btn layui-btn-sm hover-details layui-btn-primary">{$language_tag.index_public_info}</button></a>
                            </th>
                        </tr>
                        {/foreach}
                        </tbody>

                    </table>
                </div>
                <div class="listButtom">
                    {include file='public/page' /}
                </div>
            </div>
    </div>

    <div class="layui-footer">
        <!-- 底部固定区域 -->
        © layui.com - 底部固定区域
    </div>
</div>

{include file='public/foot_js' /}
<script src='__STATIC__/javascript/system/source.js'></script>

</body>
</html>
