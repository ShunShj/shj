
function aaa(obj){
    all_p = parseInt($(obj).val());
    for(var i=0;i<$(".allote").length;i++){
        if($(".total").eq(i).val()<all_p){
            all_p = (all_p-parseInt($(".total").eq(i).val()));
            $(".total").eq(i).val(all_p);
        }
    }

}
