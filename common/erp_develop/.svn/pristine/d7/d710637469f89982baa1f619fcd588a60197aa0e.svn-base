<!DOCTYPE html>
<html>
<head>
    {include file='public/head' /}
    <title>language-manage-edit</title>
</head>
<body class="layui-layout-body">
<div class="layui-layout layui-layout-admin">

    <div class="layui-header">
        {include file='public/header' /}
    </div>

    <div class="layui-side layui-bg-black">
        <div class="layui-side-scroll">
            <!-- 左侧导航区域（可配合layui已有的垂直导航） -->
            {include file='public/left_menu' /}
        </div>
    </div>

    <div class="layui-body">

        <!-- 内容主体区域 -->
        <div style="padding: 15px;">
            <div class='layui-form-item'>
		   		<span class="layui-breadcrumb" lay-separator="-">

                    <a>{$language_tag.index_public_homepage}</a>
					<a>{$language_tag.index_public_system}</a>
					<a>{$language_tag.index_system_showLanguageManage_language_manage}</a>
					<a><cite>{$language_tag.index_system_showLanguageManage_info_language}</cite></a>

				</span>
            </div>
            <br/>
            <br/>
            <br/>
            {foreach $data as $k=>$v}
                <div class="layui-row">
                    <form class="layui-form all-detail layui-col-md4" onSubmit="return edit()">
                        <div class="layui-form-item">
                            <label class="layui-form-label">{$language_tag.index_system_showLanguageManage_name}：</label>
                            <div class="layui-input-block">
                                {$MultilingualAll['language-language_name-'.$v.language_id.'-'.$Think.session.user.language_id][0]['translate']|default=$v.language_name}&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
                                <i class="iconfont icon-fanyifuwu"
                                   style="position: absolute;font-size:30px;cursor:pointer;"
                                       onclick="MultilingualSetting('edit_lg_name','language','language_name',{$_GET['id']})"></i>
                            </div>
                        </div>
                        <div class="layui-form-item">
                            <label class="layui-form-label">{$language_tag.index_system_showLanguageManage_create_time}：</label>
                            <div class="layui-input-block">
                                {$v.create_time|date='Y-m-d H:i:s',###}
                            </div>
                        </div>
                        <div class="layui-form-item">
                            <label class="layui-form-label">{$language_tag.index_system_showLanguageManage_update_time}：</label>
                            <div class="layui-input-block">
                                {if condition="$v.update_time neq ''"}
                                    {$v.update_time|date='Y-m-d H:i:s',###}
                                    {else/}{$language_tag.index_system_showLanguageManage_no_update_time}
                                {/if}
                            </div>
                        </div>
                        <div class="layui-form-item">
                            <label class="layui-form-label">{$language_tag.index_public_status}：</label>
                            <div class="layui-input-block">
                                {if condition="$v.status eq 1"}
                                {$language_tag.index_public_show}
                                    {else}{$language_tag.index_public_disabled}
                                {/if}
                            </div>
                        </div>
                        <br/>
                        <div class="layui-form-item">
                            <div class="layui-input-block">
                                <a href='/system/showLanguageManage'><button type="button" class="layui-btn layui-btn-primary">{$language_tag.index_public_back}</button></a>
                                <input type="hidden" id="language_id_hidden" value="{$language_id}">
                            </div>
                        </div>
                    </form>
                </div>
            {/foreach}
        </div>
    </div>

    <div class="layui-footer">
        <!-- 底部固定区域 -->
        © layui.com - 底部固定区域
    </div>
</div>
{include file='public/foot_js' /}
<script src='__STATIC__/javascript/system/language.js'></script>
</body>
</html>
