<!DOCTYPE html>
<html>
<head>
    {include file='public/head' /}
    <title>渠道管理</title>

</head>
<body class="layui-layout-body">
<div class="layui-layout layui-layout-admin">
    <div class="layui-header">
        {include file='public/header' /}
    </div>

    <div class="layui-side layui-bg-black">
        <div class="layui-side-scroll">
            <!-- 左侧导航区域（可配合layui已有的垂直导航） -->
            {include file='public/left_menu' /}
        </div>
    </div>

    <div class="layui-body">

        <!-- 内容主体区域 -->
        <div style="padding: 15px 15px 0px;">
            <div class="body-top">
                <div class='layui-form-item'>
                <span class="layui-breadcrumb" lay-separator="-">
                    <a>销售管理</a>
                    <a><cite>渠道管理</cite></a>
                </span>
                </div>
                <br/>
                <div class='layui-block input-inline'>
                    <form action="/sale/setDistributorManage" method="post" >
                        <div class='layui-inline' >
                            <div class='layui-input-inline'>
                                <input type="text" id="search_Id" name="search_Id" value="{$setDistributorManage.search_Id}"   placeholder="{$language_tag.index_source_showHotelSource_id}" class="layui-input">
                            </div>
                            <div class='layui-input-inline'>
                                <input type="text" id="search_Name" name="search_Name" value="{$setDistributorManage.search_Name}"  placeholder="名称" class="layui-input">
                            </div>

                            <div class='layui-input-inline'>
                                <div class="layui-form">
                                    <select  id="search_status" name="search_status">
                                        <option value="0" {$setDistributorManage.search_status==0?'selected':''} >-选择状态-</option>
                                        <option value="1" {$setDistributorManage.search_status==1?'selected':''} >可用</option>
                                        <option value="2" {$setDistributorManage.search_status==2?'selected':''} >{$language_tag.index_public_disabled}</option>
                                    </select>
                                </div>
                            </div>

                            <div class='layui-button-inline layui-search-inline'>
                                <button class="layui-btn nav-search">{$language_tag.index_public_search}</button>
                                <!--<a href="/sale/clearDistributorManage" class="layui-btn layui-btn-primary">清除</a>-->
                            </div>
                        </div>
                    </form>
                    <div class='layui-button-inline'>
                        <a href='/sale/showDistributorAdd'><button class="layui-btn nav-add">添加渠道商</button></a>
                    </div>
                </div>
                <hr><br>
            </div>
            <div class="table-nont user-manage pageHeight">
                <table class="layui-table" id="language-table">
                    <thead>
                    <tr>
                        <th>{$language_tag.index_source_showHotelSource_id}</th>
                        <th>{$language_tag.index_system_showLanguageManage_name}</th>
                        <th>所属分公司</th>
                        <th>{$language_tag.index_public_status}</th>
                        <th>最后操作时间</th>
                        <th>操作人</th>
                        <th class="layui-table-width">{$language_tag.index_source_operation}</th>
                    </tr>
                    </thead>

                    {empty name='distributorList'}

                    {else /}
                    {foreach $distributorList as $distributorListV}
                    <tr>
                        <th>{$distributorListV.distributor_id}</th>
                        <th>{$distributorListV.distributor_name}</th>
                        <th>{$distributorListV.company_name}</th>
                        <th>{$distributorListV.status==1?'可用':'禁用'}</th>
                        <th><?=date("Y-m-d H:i:s", strtotime("0 hour",$distributorListV['update_time']))?></th>
                        <th>{$distributorListV.update_user_name}</th>
                        <th>
                            <a href='/sale/showDistributorEdit?id={$distributorListV.distributor_id}'><button class="layui-btn layui-btn-sm hover-edit layui-btn-primary">{$language_tag.index_public_update}</button></a>
                            <a href='/sale/showDistributorInfo?id={$distributorListV.distributor_id}'><button class="layui-btn layui-btn-sm hover-details layui-btn-primary">{$language_tag.index_public_info}</button></a>
                        </th>
                    </tr>
                    {/foreach}
                    {/empty}
                    </tbody>

                </table>
            </div>
        </div>
    </div>

    <div class="layui-footer">
        <!-- 底部固定区域 -->
        © layui.com - 底部固定区域
    </div>
</div>
{include file='public/foot_js' /}
<script>
    //JavaScript代码区域
    !function(){
        var layer = layui.layer ;
        var form = layui.form;

    }();

</script>
</body>
</html>

<script>


</script>