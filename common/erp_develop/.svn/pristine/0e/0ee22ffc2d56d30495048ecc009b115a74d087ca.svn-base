<!DOCTYPE html>
<html>
<head>
	{include file='public/head' /}
  	<title>layout 后台大布局 - Layui</title>
 
</head>
<body class="layui-layout-body">
<div class="layui-layout layui-layout-admin">
  <div class="layui-header">
	{include file='public/header' /}
  </div>
  
  <div class="layui-side layui-bg-black">
    <div class="layui-side-scroll">
      <!-- 左侧导航区域（可配合layui已有的垂直导航） -->
		{include file='public/left_menu' /}
    </div>
  </div>
  
  <div class="layui-body">
  
		<!-- 内容主体区域 -->
		<div style="padding: 15px 15px 0px;">
		<div class="body-top">
			<div class='layui-form-item'>
			<span class="layui-breadcrumb" lay-separator="-">
			  	<a>{$language_tag.index_public_homepage}</a>
				<a>{$language_tag.index_public_system}</a>
			  	<a><cite>{$language_tag.index_system_showDepartmentManage_department_manage}</cite></a>
			</span>
			</div>
			<br/>
			<div class='layui-block input-inline' >
				<form method='get' action='/system/showDepartmentManage'>
					<div class='layui-input-inline'>
						<input type="text" name="department_name" value="{$Think.get.department_name}"  lay-verify="" placeholder="{$language_tag.index_system_showDepartmentManage_input_department_name}" autocomplete="off" class="layui-input">
					</div>
					<div class='layui-input-inline'>
						<div class="layui-form">
							<select name="status" lay-verify="required">
								<option value="">-{$language_tag.index_source_showCruisesManage_search_status}-</option>
								<option value="1" selected>{$language_tag.index_public_show}</option>
								<option value="2" {if condition="$Think.get.status eq 2"}selected='selected' {/if}>{$language_tag.index_public_disabled}</option>
							</select>
						</div>
					</div>
					<div class='layui-button-inline layui-search-inline'>
						<button class="layui-btn nav-search">{$language_tag.index_public_search}</button>
					</div>
				</form>
				<div class='layui-button-inline'>
					<span style="{:action('index/auth/check_auth',['role_id'=>'281'])}"><a href='/system/showDepartmentAdd'><button class="layui-btn nav-add">{$language_tag.index_system_showDepartmentManage_add_department}</button></a></span>
				</div>
			</div>
			<hr><br>
		</div>
		<div class="table-nont user-manage pageHeight">
			<table class="layui-table layui-form" >
				<thead>
				<tr>
					<th>{$language_tag.index_system_showDepartmentManage_id}</th>
					<th>{$language_tag.index_system_showDepartmentManage_department_name}</th>
					<th>{$language_tag.index_system_showDepartmentManage_company_name}</th>
					<th>{$language_tag.index_system_showDepartmentManage_linkman}</th>

					<th>{$language_tag.index_system_showDepartmentManage_phone}</th>

					<th>{$language_tag.index_public_status}</th>
					<th class="layui-table-width">{$language_tag.index_source_operation}</th>
				</tr>

				</thead>
				<tbody>
				{foreach name="data" item="vo" }
				<tr>
					<th class="department_id">{$vo.department_id}</th>
					<th>{$MultilingualAll['department-department_name-'.$vo.department_id.'-'.$Think.session.user.language_id][0]['translate']|default=$vo.department_name}</th>
					<th>{$vo.company_name}</th>
					<th>{$vo.linkman}</th>

					<th>{$vo.phone}</th>

					<th>
						{if condition="in_array('282',$auth_id) OR $Think.session.user.role_id eq 1"}<input type="checkbox" {if condition="$vo.status eq 1"}checked=""{else/}{/if} name="open" lay-skin="switch" lay-filter="switchTest" lay-text="{$language_tag.index_public_show}|{$language_tag.index_public_disabled}">{else/}{if condition="$vo.status eq 1"}{$language_tag.index_public_show}{else}{$language_tag.index_public_disabled}{/if}{/if}
					</th>
					<th ><span style="{:action('index/auth/check_auth',['role_id'=>'282'])}"><a href='/system/showDepartmentEdit/department_id/{$vo.department_id}'><button class="layui-btn layui-btn-sm hover-edit layui-btn-primary">{$language_tag.index_public_update}</button></a></span>
						<span style="{:action('index/auth/check_auth',['role_id'=>'283'])}"><a href='/system/showDepartmentInfo/department_id/{$vo.department_id}'><button class="layui-btn layui-btn-sm hover-details layui-btn-primary">{$language_tag.index_public_info}</button></a></span></th>
				</tr>
				{/foreach}
				</tbody>
			</table>
		</div>


		<div class="listButtom">

			<!--加载分页-->
			{include file='public/page' /}

		</div>
    
    </div>
  </div>
  
  <div class="layui-footer">
    <!-- 底部固定区域 -->
    
  </div>
</div>
{include file='public/foot_js' /}
<script>
	var layer = layui.layer;

	var form = layui.form;
	form.on('switch(switchTest)', function(data){
		var table_id = $(data.elem).parents("tr").children(".department_id").html();
		var table_id_name = "department_id";
		var table_name = "department";
		if(this.checked == true){
			var status = 1;
		}else{
			var status = 2;
		}

		$.ajax({
			type: "POST",
			url: '/index/changeStatus',
			data: {
				table_id:table_id,
				table_id_name:table_id_name,
				table_name:table_name,
				status:status,
			},
			success: function(data){
				//console.log(data);
				if(data.code!=200){
					layer.msg(data.msg);
					return false;
				}else if(data.code==200) {
					layer.msg('操作成功',{time:1,end : function(layero, index){

						}
					});
				}
			},
			error:function(XMLHttpRequest, textStatus, errorThrown){
				layer.msg('验证失败')
			}
		});
	});


</script>
</body>
</html>