                                    <option> </option>
                                    <option value="1" {if condition="1 eq $hotel_result['status']"}selected="seleted"{/if}>{$Think.lang.index_public_show}</option>
                                    <option value="2" {if condition="2 eq $hotel_result['status']"}selected="seleted"{/if}>{$Think.lang.index_public_disabled}</option>
                                </select>
                            </div>
                        </div>
                    </div>
                </div>
